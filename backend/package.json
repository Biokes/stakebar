    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "twilio": "^5.10.3",
    "typeorm": "^0.3.27",
    "wait-on": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.7.2",
    "@types/nodemailer": "^7.0.2",
